# ============================================
# APPLICATION CONFIGURATION
# ============================================
APP_NAME="Abraham of London"
APP_ENVIRONMENT=development
NODE_ENV=development

# ============================================
# NEXT.JS & FRONTEND CONFIGURATION
# ============================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_GA_MEASUREMENT_ID=""
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=""

# ============================================
# APPLICATION BEHAVIOR CONFIGURATION
# ============================================
# Inner Circle Configuration
INNER_CIRCLE_KEY_EXPIRY_DAYS=90
INNER_CIRCLE_RATE_LIMIT_IP=5
INNER_CIRCLE_RATE_LIMIT_EMAIL=3
INNER_CIRCLE_MAX_UNLOCKS_DAILY=100
INNER_CIRCLE_JWT_EXPIRY_HOURS=24
INNER_CIRCLE_ENABLE_CACHE=true
INNER_CIRCLE_CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_GLOBAL_LIMIT=100
RATE_LIMIT_API_LIMIT=30
RATE_LIMIT_STRICT_MODE=true

# Security Headers
ENABLE_STRICT_CSP=true
HSTS_MAX_AGE=31536000

# Audit & Monitoring
ENABLE_AUDIT_LOGGING=true
AUDIT_RETENTION_DAYS=90
LOG_LEVEL=info
LOG_SUSPICIOUS_REQUESTS=true

# Development Flags
MIDDLEWARE_DEBUG=false
SKIP_AUTH_IN_DEV=true
ALLOW_INSECURE_IN_DEV=true

# Prisma
PRISMA_LOG_LEVEL=info
PRISMA_ENABLE_SHUTDOWN_HOOKS=true

# ============================================
# SERVICE CONFIGURATION (URLs/Endpoints only)
# ============================================
# Database Connection String (SQLite for development)
DATABASE_URL="file:./dev.db"
INNER_CIRCLE_DB_URL="file:./dev.db"

# Redis (URL only - no password)
REDIS_URL="redis://localhost:6379"

# SMTP (Host/Port only - no credentials)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"

# Notification Email (recipient only)
INNER_CIRCLE_NOTIFICATION_EMAIL="info@abrahamoflondon.org"

# NextAuth
NEXTAUTH_URL=http://localhost:3000

# Admin Flags (no actual keys)
ADMIN_JWT_ENABLED=true
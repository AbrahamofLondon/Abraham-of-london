# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Explicitly declare text files with LF
*.js text eol=lf
*.mjs text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf
*.mdx text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.sh text eol=lf

# Denote binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.mp3 binary
*.wav binary
*.mp4 binary
*.webm binary
*.zip binary
*.tar binary
*.gz binary

# Force LF for scripts
scripts/*.mjs text eol=lf
scripts/*.js text eol=lf


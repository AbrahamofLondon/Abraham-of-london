{
  "name": "abraham-of-london",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=20 <21",
    "pnpm": ">=9 <10"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev",
    "dev:safe": "cross-env NEXT_DISABLE_ESLINT=1 NEXT_DISABLE_TYPECHECK=1 next dev",
    "dev:content": "contentlayer2 build --watch",
    "start": "next start",
    "start:safe": "cross-env NEXT_DISABLE_ESLINT=1 NEXT_DISABLE_TYPECHECK=1 next start",
    "typecheck": "tsc --noEmit",
    "typecheck:safe": "tsc --noEmit --skipLibCheck",
    "lint": "eslint .",
    "lint:safe": "eslint . --max-warnings 100",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf .next .turbo node_modules .reports .contentlayer",
    "clean:build": "rimraf .next .contentlayer",
    "content:build": "contentlayer2 build",
    "content:dev": "contentlayer2 build --watch",
    "guard:conflicts": "node scripts/check-conflicts.js",
    "build": "pnpm run guard:conflicts && pnpm run content:build && next build",
    "build:safe": "cross-env CI=false NEXT_DISABLE_ESLINT=1 NEXT_DISABLE_TYPECHECK=1 pnpm run content:build && next build",
    "build:fast": "pnpm run content:build && next build",
    "build:netlify": "pnpm run guard:conflicts && pnpm run build:netlify:safe",
    "build:netlify:safe": "cross-env CI=false NEXT_DISABLE_ESLINT=1 NEXT_DISABLE_TYPECHECK=1 contentlayer2 build && next build",
    "check": "pnpm run lint && pnpm run typecheck",
    "check:safe": "pnpm run lint:safe && pnpm run typecheck:safe",
    "check:ci": "pnpm run check:safe",
    "build:ci": "pnpm run build:netlify:safe",
    "prebuild": "pnpm run clean:build",
    "postbuild": "node -e \"console.log('Build completed successfully')\"",
    "postinstall": "contentlayer2 build",
    "pdf:purpose": "tsx scripts/generate-ultimate-purpose-of-man-pdf.tsx",
    "pdfs": "pnpm run pdf:purpose",
    "downloads:validate": "node scripts/validate-downloads.mjs",
    "test:e2e": "pnpm dlx playwright test"
  },
  "dependencies": {
    "@react-pdf/renderer": "4.3.1",
    "clsx": "2.1.1",
    "contentlayer2": "0.5.8",
    "date-fns": "4.1.0",
    "framer-motion": "11.2.10",
    "fuse.js": "7.0.0",
    "gray-matter": "4.0.3",
    "lucide-react": "0.454.0",
    "next": "14.2.12",
    "next-mdx-remote": "5.0.0",
    "next-themes": "0.4.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-icons": "5.3.0",
    "rehype-autolink-headings": "7.1.0",
    "rehype-external-links": "3.0.0",
    "rehype-slug": "6.0.0",
    "remark-gfm": "4.0.0",
    "resend": "6.5.2",
    "tailwind-merge": "3.4.0",
    "ws": "8.18.3"
  },
  "devDependencies": {
    "@netlify/plugin-nextjs": "5.14.5",
    "@react-email/components": "0.0.23",
    "@tailwindcss/typography": "0.5.19",
    "@types/mdx": "^2.0.13",
    "@types/node": "20.11.30",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@types/ws": "8.5.10",
    "@typescript-eslint/eslint-plugin": "8.46.4",
    "@typescript-eslint/parser": "8.46.4",
    "autoprefixer": "10.4.20",
    "cross-env": "7.0.3",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.12",
    "eslint-config-prettier": "^9.1.2",
    "postcss": "8.4.47",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "tailwindcss": "3.4.14",
    "tsx": "^4.20.6",
    "typescript": "5.6.3"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.24.0",
      "@contentlayer/core": "npm:contentlayer2@0.5.8",
      "@contentlayer/source-files": "npm:contentlayer2@0.5.8"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@opentelemetry/*"
      ],
      "allowedVersions": {
        "@opentelemetry/api": "1.9.0",
        "react": "18.3.1",
        "react-dom": "18.3.1"
      }
    }
  }
}
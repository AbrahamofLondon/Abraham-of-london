{
  "name": "abraham-of-london",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "dev:font": "FONT_OPTIMIZATION=true next dev",
    "dev:profile": "NEXT_PROFILING=true next dev",
    "dev:full": "pnpm env:check && concurrently --kill-others-on-fail=false --names \"CONTENT,DEV\" \"pnpm contentlayer:watch\" \"next dev\"",
    "dev:init": "pnpm env:setup && pnpm db:setup && pnpm db:seed && pnpm dev",
    "dev:init:full": "pnpm clean:full && pnpm setup && pnpm env:setup && pnpm db:setup && pnpm db:seed && pnpm dev",
    "dev:windows": "cross-env IS_WINDOWS=true next dev",
    "dev:simple": "next dev",
    "dev:turbo": "cross-env TURBOPACK_DISABLED=false next dev --turbo",
    "build": "cross-env TURBOPACK_DISABLED=true NEXT_RUNTIME=nodejs next build",
    "build:fast": "cross-env TURBOPACK_DISABLED=false next build",
    "build:netlify": "pnpm install --frozen-lockfile && pnpm contentlayer:build && pnpm build",
    "build:analyze": "ANALYZE=true next build",
    "build:production": "NODE_ENV=production next build",
    "build:fonts": "FONT_OPTIMIZATION=true next build",
    "build:audit": "pnpm env:check && pnpm content:validate && next build",
    "build:simple": "next build",
    "build:windows": "cross-env IS_WINDOWS=true pnpm build",
    "build:staging": "NODE_ENV=staging pnpm env:staging && pnpm type-check && pnpm build",
    "build:no-contentlayer": "cross-env DISABLE_CONTENTLAYER=true next build",
    "build:check": "pnpm env:check && pnpm content:full && pnpm build",
    "build:complete": "pnpm prisma:generate && pnpm pdfs:institutional:cycle && pnpm content:full && pnpm build",
    "build:turbo": "cross-env TURBOPACK_DISABLED=false next build",
    "prebuild": "pnpm fix:windows && pnpm fix:yaml:all && pnpm contentlayer:safe || echo 'Contentlayer build warning (continuing anyway)'",
    "start": "next start",
    "start:production": "cross-env NODE_ENV=production NEXT_EDGE_RUNTIME=experimental-edge node server.js",
    "preview": "next start --port 3001",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:eslint": "eslint . --ext .ts,.tsx,.js,.jsx --fix --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "type-check:project": "tsc --noEmit --project tsconfig.json",
    "clean": "rm -rf .next .contentlayer node_modules/.cache",
    "clean:full": "rm -rf node_modules/.cache .next .contentlayer .turbo",
    "clean:artifacts": "rimraf .next .contentlayer .cache node_modules/.cache .turbo",
    "clean:win": "Remove-Item -Recurse -Force .next, .contentlayer, node_modules/.cache -ErrorAction SilentlyContinue",
    "fonts:optimize": "node scripts/optimize-fonts.js",
    "fonts:generate": "node scripts/generate-fonts.js",
    "images:optimize": "node scripts/optimize-images.js",
    "images:resize": "node scripts/resize-images.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=\"\\.(test|spec)\\.(ts|tsx)$\" --passWithNoTests",
    "test:integration": "jest --testPathPattern=\"\\.(test|spec)\\.(ts|tsx)$\" --testNamePattern=\"integration\"",
    "test:e2e": "playwright test --project=chromium",
    "test:ci": "pnpm test:unit -- --ci --maxWorkers=2",
    "security:check": "npm audit --audit-level=high",
    "security:scan": "tsx scripts/security/security-scan.ts",
    "security:full:audit": "pnpm security:scan && pnpm security:check",
    "security:headers": "node scripts/check-security-headers.js",
    "postinstall": "pnpm prisma:generate",
    "prestart": "pnpm env:check || echo 'Environment check completed (some warnings may appear)'",
    "setup": "pnpm install",
    "env:setup": "tsx scripts/environment/setup-env.ts",
    "env:check": "tsx scripts/environment/check-env.ts || echo 'Environment check completed (some warnings may appear)'",
    "env:production:sync": "NODE_ENV=production tsx scripts/environment/generate-production-env.ts",
    "env:staging": "NODE_ENV=staging tsx scripts/environment/generate-staging-env.ts",
    "env:development": "NODE_ENV=development tsx scripts/environment/generate-development-env.ts",
    "env:validate": "tsx scripts/environment/validate-env.ts",
    "db:setup": "tsx scripts/database/setup-database.ts",
    "db:reset": "del /f prisma\\dev.db 2>nul && pnpm db:setup",
    "db:seed": "tsx scripts/database/seed-database.ts",
    "db:verify": "tsx scripts/database/verify-database.ts",
    "db:backup": "tsx scripts/database/backup-database.ts",
    "db:health": "tsx scripts/database/check-database-health.ts",
    "prisma:generate": "pnpm exec prisma generate",
    "prisma:push": "pnpm exec prisma db push --accept-data-loss",
    "prisma:studio": "pnpm exec prisma studio --url=\"file:./prisma/dev.db\"",
    "contentlayer": "pnpm exec contentlayer2",
    "contentlayer:watch": "pnpm exec contentlayer2 dev",
    "contentlayer:build": "cross-env INIT_CWD=$PWD pnpm exec contentlayer2 build",
    "contentlayer:safe": "cross-env NEXT_RUNTIME=nodejs node scripts/contentlayer-build-safe.js",
    "content:clean": "rimraf .contentlayer .next/content",
    "content:validate": "node scripts/validate-frontmatter.mjs",
    "content:schema": "tsx scripts/content/validate-schema.ts",
    "content:stats": "tsx scripts/content/content-statistics.ts",
    "content:backup": "tsx scripts/content/backup-content.ts",
    "content:optimize": "tsx scripts/content/optimize-content.ts",
    "content:full": "pnpm content:clean && pnpm contentlayer:safe && pnpm content:validate",
    "content:audit": "pnpm content:validate",
    "pdfs:all": "tsx scripts/generate-pdfs.ts --force-clean",
    "pdfs:standalone": "tsx scripts/generate-standalone-pdf.tsx",
    "pdfs:frameworks": "tsx scripts/generate-frameworks-pdf.tsx",
    "pdfs:canvas": "tsx scripts/generate-legacy-canvas.ts",
    "pdfs:refresh": "node scripts/refresh-downloads.js",
    "pdfs:generate": "tsx scripts/pdf/unified-pdf-generator.ts",
    "pdfs:institutional:cycle": "tsx scripts/pdf/unified-pdf-generator.ts --tier all",
    "pdfs:validate": "tsx scripts/pdf/validate-pdfs.ts",
    "pdfs:sync": "tsx scripts/pdf/sync-pdfs.ts",
    "refresh:downloads": "node scripts/refresh-downloads.js",
    "pdfs:cleanup": "tsx scripts/pdf/cleanup-pdfs.ts",
    "pdfs:optimize": "tsx scripts/pdf/optimize-pdfs.ts",
    "pdfs:list": "tsx scripts/pdf/list-pdfs.ts",
    "pdfs:audit": "pnpm pdfs:list && pnpm pdfs:validate",
    "pdfs:build": "pnpm pdfs:institutional:cycle && pnpm pdfs:sync",
    "pdf:generate": "node scripts/pdf/intelligent-generator.js",
    "pdf:generate:all": "node scripts/pdf/generate-all-pdfs.js",
    "pdf:cleanup": "node scripts/pdf/cleanup-pdf-files.js",
    "pdf:optimize": "node scripts/pdf/optimize-pdfs.js",
    "pdf:thumbnails": "node scripts/pdf/generate-thumbnails.js",
    "fix:windows": "node scripts/windows-fix.js",
    "fix:contentlayer": "node scripts/system/fix-contentlayer-issues.js",
    "fix:imports": "tsx scripts/system/fix-imports.ts",
    "fix:build": "tsx scripts/system/fix-build-issues.ts",
    "fix:prisma": "tsx scripts/system/fix-prisma-working.ts",
    "fm:validate": "node scripts/validate-frontmatter.mjs",
    "prebuild": "pnpm fm:validate && pnpm fix:windows && pnpm contentlayer:safe || echo 'Contentlayer build warning (continuing anyway)'",
    "fix:all": "pnpm fix:prisma && pnpm fix:contentlayer && pnpm fix:imports",
    "health": "tsx scripts/system/check-system-health.ts",
    "check:system": "tsx scripts/system/check-system.ts",
    "check:dependencies": "tsx scripts/system/check-dependencies.ts",
    "check:security": "audit-ci --config .auditci.json",
    "check:all": "pnpm check:system && pnpm check:dependencies && pnpm check:security",
    "reset:windows": "pnpm clean:win && pnpm fix:windows && pnpm setup",
    "reset:hard": "git clean -fdx && pnpm setup",
    "ci:test": "pnpm lint && pnpm type-check && pnpm test",
    "ci:build": "pnpm env:check && pnpm content:audit && pnpm build",
    "ci:full": "pnpm ci:test && pnpm ci:build",
    "maintenance": "pnpm content:clean && pnpm pdfs:validate && pnpm db:health",
    "maintenance:full": "pnpm maintenance && pnpm content:optimize && pnpm pdfs:optimize",
    "backup": "pnpm db:backup && pnpm content:backup",
    "backup:encrypt": "tsx scripts/backup/encrypt-backups.ts",
    "backup:verify": "tsx scripts/backup/verify-backups.ts",
    "backup:full:cycle": "pnpm backup && pnpm backup:encrypt && pnpm backup:verify",
    "backup:create": "node scripts/create-backup.js",
    "backup:restore": "node scripts/restore-backup.js",
    "performance:test": "artillery run scripts/performance/performance-test.yml",
    "performance:image:optimize": "tsx scripts/performance/optimize-images.ts",
    "performance:audit": "node scripts/performance-audit.js",
    "deploy:prepare": "NODE_ENV=production pnpm env:production && pnpm type-check && pnpm test && pnpm build:production",
    "deploy:staging": "NODE_ENV=staging pnpm env:staging && pnpm type-check && pnpm build:staging",
    "deploy:validate": "pnpm env:validate && pnpm db:verify && pnpm content:validate",
    "deploy:production:safe": "pnpm deploy:validate && pnpm backup:full:cycle && pnpm deploy:prepare",
    "deploy:staging:legacy": "node scripts/deploy-staging.js",
    "deploy:production:legacy": "node scripts/deploy-production.js",
    "analyze": "cross-env ANALYZE=true NODE_OPTIONS=--max-old-space-size=4096 next build",
    "api:test": "tsx scripts/api/test-api-endpoints.ts",
    "api:health": "tsx scripts/api/test-health-endpoint.ts",
    "standardize:extensions": "tsx scripts/system/standardize-extensions.ts",
    "monitor": "tsx scripts/system/monitor-system.ts",
    "monitor:performance": "tsx scripts/system/monitor-performance.ts",
    "monitor:start": "node scripts/monitor-application.js",
    "monitor:status": "node scripts/check-status.js",
    "compliance:gdpr:check": "tsx scripts/compliance/gdpr-audit.ts",
    "update:dependencies": "npm-check-updates -u",
    "update:all": "pnpm update:dependencies && pnpm install",
    "update:content": "node scripts/update-content.js",
    "docker:build": "docker build -t abraham-of-london .",
    "docker:run": "docker run -p 3000:3000 abraham-of-london",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags",
    "release:candidate": "pnpm ci:full && pnpm build:production",
    "release:production": "pnpm release:candidate && pnpm deploy:production:safe",
    "platform:health": "pnpm health && pnpm db:health && pnpm content:stats",
    "assets:optimize": "node scripts/asset-optimizer.js",
    "assets:audit": "node scripts/audit-assets.js",
    "links:check": "node scripts/check-links.js",
    "links:validate": "node scripts/validate-links.js",
    "sitemap:generate": "node scripts/generate-sitemap.js",
    "sitemap:validate": "node scripts/validate-sitemap.js",
    "seo:audit": "node scripts/seo-audit.js",
    "seo:optimize": "node scripts/seo-optimize.js",
    "analytics:process": "node scripts/process-analytics.js",
    "analytics:report": "node scripts/analytics-report.js",
    "fonts:optimize:web": "node scripts/optimize-fonts.js",
    "ci:setup:legacy": "node scripts/setup-ci.js",
    "ci:test:legacy": "node scripts/run-ci-tests.js",
    "debug:content": "node scripts/debug-contentlayer.js",
    "debug:build": "node scripts/debug-build.js",
    "debug:performance": "node scripts/debug-performance.js",
    "export:data": "node scripts/export-data.js",
    "import:data": "node scripts/import-data.js",
    "migrate:data": "node scripts/migrate-data.js",
    "migrate:content": "node scripts/migrate-content-structure.js",
    "validate:build": "node scripts/validate-build.js",
    "validate:deploy": "node scripts/validate-deployment.js",
    "optimize:all": "npm run assets:optimize && npm run images:optimize && npm run fonts:optimize:web",
    "audit:all": "npm run audit:production && npm run seo:audit && npm run security:scan",
    "audit:staging": "node scripts/check-links.js --url=https://staging.abrahamoflondon.org",
    "audit:production": "node scripts/check-links.js --url=https://www.abrahamoflondon.org",
    "audit:local": "node scripts/check-links.js --local",
    "audit:files": "node -e \"const { checkLocalFiles } = require('./scripts/check-links.js'); const fs = require('fs'); const paths = JSON.parse(fs.readFileSync('./scripts/actual-paths.json', 'utf8')); const results = checkLocalFiles([...paths.pdfDownloads, ...paths.criticalAssets]); console.log('Local File Audit:'); results.forEach(r => console.log(r.exists ? '✅' : '❌', r.path, r.exists ? (r.bytes + ' bytes') : 'MISSING'));\"",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:validate": "node scripts/validate-docs.js",
    "postbuild": "npm run sitemap:generate",
    "fix:yaml:all": "node scripts/fix-yaml-specific.js",
    "fix:yaml": "pnpm fix:yaml:all"
  },

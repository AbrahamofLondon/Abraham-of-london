        <meta property="og:title" content={`${pageTitle} | Abraham of London`} />
        <meta property="og:description" content={pageDescription} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://abrahamoflondon.com/prints" />
        <meta property="og:image" content="/assets/images/prints-og.jpg" />
        <meta name="twitter:card" content="summary_large_image" />
        <link rel="canonical" href="https://abrahamoflondon.com/prints" />
      </Head>

      <main className="min-h-screen bg-black">
        {/* Hero Section */}
        <section className="relative overflow-hidden border-b border-gold/10 bg-gradient-to-b from-black via-zinc-950/50 to-black">
          <div className="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(212,175,55,0.08),transparent_55%)]" />
          
          <div className="relative mx-auto max-w-7xl px-4 py-20 sm:px-6 lg:px-8 lg:py-24">
            <div className="max-w-3xl">
              <div className="mb-6 inline-flex items-center gap-2 rounded-full border border-gold/20 bg-gold/5 px-4 py-2">
                <Palette className="h-4 w-4 text-gold" />
                <span className="text-sm font-bold uppercase tracking-[0.3em] text-gold">
                  Visual Artefacts
                </span>
              </div>
              <h1 className="font-serif text-4xl font-semibold text-cream sm:text-5xl lg:text-6xl">
                Prints
              </h1>
              <p className="mt-6 text-lg leading-relaxed text-gray-400">
                {pageDescription}
              </p>

              {/* Stats */}
              <div className="mt-10 grid grid-cols-2 md:grid-cols-4 gap-4 max-w-xl">
                <div className="rounded-xl border border-white/10 bg-white/5 p-4 backdrop-blur-sm">
                  <div className="text-2xl font-bold text-white mb-1">{prints.length}</div>
                  <div className="text-xs font-medium text-gray-400 uppercase tracking-wider">Total Prints</div>
                </div>
                <div className="rounded-xl border border-gold/30 bg-gold/10 p-4 backdrop-blur-sm">
                  <div className="text-2xl font-bold text-gold mb-1">{featuredCount}</div>

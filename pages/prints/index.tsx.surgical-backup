                </div>
                <div className="rounded-xl border border-white/10 bg-white/5 p-4 backdrop-blur-sm">
                  <div className="text-2xl font-bold text-white mb-1">
                    {prints.filter(p => p.downloadUrl).length}
                  </div>
                  <div className="text-xs font-medium text-gray-400 uppercase tracking-wider">Downloadable</div>
                </div>
              </div>

              <div className="mt-12 flex flex-wrap gap-4">
                <Link
                  href="#prints-grid"
                  className="inline-flex items-center gap-3 rounded-xl bg-gold px-6 py-3 text-sm font-bold text-black hover:bg-gold/90 transition-colors"
                >
                  <Eye className="h-5 w-5" />
                  Browse Collection
                </Link>
                <Link
                  href="/inner-circle"
                  className="inline-flex items-center gap-3 rounded-xl border border-gold/40 bg-white/5 px-6 py-3 text-sm font-bold text-gold hover:border-gold/60 hover:bg-white/10 transition-colors"

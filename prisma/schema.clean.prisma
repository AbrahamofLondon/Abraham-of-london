// prisma/schema.clean.prisma
// Minimal working schema for Prisma 7.2.0

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
  // Remove previewFeatures entirely for now
}

datasource db {
  provider = "sqlite"
  // URL will be in config.ts
}

// Basic models to start with
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  
  @@map("users")
}
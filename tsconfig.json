// tsconfig.json

{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "jsx": "preserve",
        "allowJs": false,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "contentlayer/generated": [
                ".contentlayer/generated"
            ],
            // CRITICAL FIX: Confirmed correct mapping of @/ to the project root
            "@/*": [
                "./*"
            ], 
            "~/*": [
                "./*"
            ]
        },
        "types": [
            "node"
        ],
        "incremental": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        ".next/dev/types/**/*.ts",
        ".contentlayer/generated",
        ".next\\dev/types/**/*.ts",
        ".next\\dev/types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "playwright.config.ts",
        "tests/**/*"
    ]
}
{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "allowJs": true,
    "skipLibCheck": true,  // CRITICAL: Must be true
    "strict": false,       // CRITICAL: Must be false
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "contentlayer/generated": ["./.contentlayer/generated"],
      "next-contentlayer/hooks": ["./node_modules/next-contentlayer2/hooks"]
    },
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".contentlayer/generated",
    ".next/dev/types/**/*.ts",
    "types/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "pages/api-backup/**",
    "**/*.spec.tsx",
    "_tests_/**/*",
    "**/[*]*",
    "imports-fix-backup/**",
    "**/backup-*/**",
    "**/*backup*",
    "**/*.backup.*",
    "**/temp/**",
    "**/tmp/**",
    "**/.backup/**",
    "**/dist/**",
    "**/build/**",
    // EXCLUDE problem packages
    "node_modules/.pnpm/@effect-ts+*",
    "node_modules/.pnpm/mdx-bundler@*",
    "node_modules/@effect-ts/**",
    "node_modules/mdx-bundler/**"
  ]
}
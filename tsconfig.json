{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "contentlayer/generated": [
        "./.contentlayer/generated"
      ],
      ".contentlayer/generated": [
        "./.contentlayer/generated"
      ]
    },
    
    // --- RELAXED SETTINGS START HERE ---
    
    // 1. Array Access Safety: Disabled
    // Fixes "Object is possibly undefined" when accessing arr[0]
    "noUncheckedIndexedAccess": false,

    // 2. Class Initialization: Disabled
    // Allows defining class properties without immediate assignment in constructor
    "strictPropertyInitialization": false,

    // 3. Catch Variables: Relaxed
    // Allows catch(e) to treat 'e' as 'any' instead of 'unknown' (no manual casting needed)
    "useUnknownInCatchVariables": false,

    // 4. Implicit Any: Relaxed
    // Allows variables to implicitly be 'any' if type inference fails
    "noImplicitAny": false,

    // 5. Unused Code: Relaxed
    // Stops compilation errors for unused variables during development
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // 6. Returns: Relaxed
    // Allows functions to exit without an explicit return statement
    "noImplicitReturns": false,

    // --- RELAXED SETTINGS END ---

    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitOverride": true,
    "types": [
      "node",
      "@netlify/functions"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "outDir": "./dist",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "skipDefaultLibCheck": true,
    "verbatimModuleSyntax": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".contentlayer/generated",
    ".next/types/**/*.ts",
    "netlify/**/*.ts",
    "types/**/*.d.ts",
    "scripts/**/*.ts",
    "scripts/**/*.mjs",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    "utils/**/*.ts",
    "utils/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    ".contentlayer/.cache",
    "out",
    "dist",
    "build",
    "public",
    "_tests_",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "cypress",
    "playwright",
    "jest.config.*",
    "next.config.*",
    "tailwind.config.*",
    "postcss.config.*",
    "*.config.ts",
    "*.config.js",
    "*.config.mjs",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}
{
  "compilerOptions": {
    "target": "es5", // From remote
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ], // From remote
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true, // Add from local for safety
    "strictNullChecks": true, // Add from remote end

    "baseUrl": ".",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@/*": ["*"],
      // Keep all custom paths for your app structure (components, lib, etc.)
      "@/lib/*": ["lib/*"],
      "@/components/*": ["components/*"],
      "@/styles/*": ["styles/*"],
      "@/public/*": ["public/*"],
      "@/config/*": ["config/*"],
      // Keep Contentlayer and Netlify specific paths
      "@netlify/functions": ["node_modules/@netlify/functions"],
      "@netlify/emails": ["node_modules/@netlify/emails"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts",
    "netlify/**/*.ts",
    "netlify/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    ".contentlayer/generated/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", "**/abraham-of-london/**"] // Exclude .next from local, keep exclude node_modules
}

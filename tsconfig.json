{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "es2022"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": false,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "config/**/*.ts",
    "config/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "public",
    "tests",
    "scripts",
    "patches",
    "netlify",
    "emails",
    "pages/api/ws/**",
    "pages/resources/**",
    "pages/strategy/**",
    "pages/downloads/**"
  ]
}
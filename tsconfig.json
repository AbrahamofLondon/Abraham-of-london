{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "es2022"
    ],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "sourceMap": true,
    "inlineSources": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "node",
      "react",
      "react-dom",
      "next"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      // Contentlayer broad mapping for 180 documents
      "contentlayer/generated": [
        "./.contentlayer/generated"
      ],
      "contentlayer/generated/*": [
        "./.contentlayer/generated/*"
      ],
      // Database & Redis
      "@prisma/client": [
        "./node_modules/.prisma/client"
      ],
      "@/lib/db": [
        "./lib/db.ts"
      ],
      "@/lib/redis": [
        "./lib/redis.ts"
      ],
      "@/lib/redis/*": [
        "./lib/redis/*"
      ],
      // Core UI/Logic
      "@/components/*": [
        "./components/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/styles/*": [
        "./styles/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifiers": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node"
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".contentlayer/generated",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    // ⚠️ CRITICAL: Exclude legacy/archive to prevent build-time type errors
    "_api_archive",
    "**/_api_archive/*"
  ]
}

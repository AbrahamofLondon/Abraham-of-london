{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "inlineSources": false,
    "paths": {
      "@/*": ["./*"],
      "@/styles/*": ["./styles/*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/fonts/*": ["./fonts/*"],
      "contentlayer/generated": ["./lib/contentlayer-compat.ts"],
      "@/lib/contentlayer-compat": ["./lib/contentlayer-compat.ts"],
      "@/lib/redis-enhanced": ["./lib/redis-enhanced.ts"],
      "@/lib/server/rate-limit-unified": ["./lib/server/rate-limit-unified.ts"],
      "@/lib/db": ["./lib/db.ts"],
      "@/lib/contentlayer/status": ["./lib/contentlayer/status.ts"],
      "@/lib/server/inner-circle-access": ["./lib/server/inner-circle-access.ts"],
      "@/lib/rate-limit": ["./lib/rate-limit.ts"],
      "@/lib/server/inner-circle-store": ["./lib/server/inner-circle-store.ts"],
      "@/lib/premium/download-token": ["./lib/premium/download-token.ts"],
      "@/lib/server/with-inner-circle-access": ["./lib/server/with-inner-circle-access.ts"],
      "@/lib/inner-circle/access": ["./lib/inner-circle/access.ts"],
      "@/lib/next-fonts": ["./lib/next-fonts.ts"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "contentlayer.config.js",
    ".contentlayer/generated",
    ".env*.local",
    "middleware.ts",
    "netlify/edge-functions/**/*.ts",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "lib/contentlayer/status.ts",
    "lib/db.ts",
    "lib/server/inner-circle-access.ts",
    "lib/server/rate-limit-unified.ts",
    "lib/premium/download-token.ts",
    "lib/server/with-inner-circle-access.ts",
    "lib/next-fonts.ts",
    "lib/fonts.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build",
    "coverage",
    ".turbo",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__mocks__/**",
    "**/.cache/**",
    "**/.contentlayer/**",
    "**/temp/**",
    "**/tmp/**"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
{
  "compilerOptions": {
    // Modern target for better optimization
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    
    // Strict mode optimizations
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    
    // Module resolution for Edge Runtime compatibility
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    
    // React settings
    "jsx": "preserve",
    "incremental": true,
    
    // Additional strict checks for production
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    
    // Performance optimizations
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    
    // Output and debugging
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "inlineSources": false,
    
    // Path aliases - FIXED
    "paths": {
      "@/*": ["./*"],
      "contentlayer/generated": ["./lib/contentlayer-compat.ts"],
      "@/lib/contentlayer-compat": ["./lib/contentlayer-compat.ts"],
      "@/lib/redis-enhanced": ["./lib/redis-enhanced.ts"],
      "@/lib/server/rate-limit-unified": ["./lib/server/rate-limit-unified.ts"],
      "@/lib/db": ["./lib/db.ts"],
      "@/lib/contentlayer/status": ["./lib/contentlayer/status.ts"],
      "@/lib/server/inner-circle-access": ["./lib/server/inner-circle-access.ts"],
      "@/lib/rate-limit": ["./lib/rate-limit.ts"],
      "@/lib/server/inner-circle-store": ["./lib/server/inner-circle-store.ts"]
    },
    
    // Plugins
    "plugins": [
      {
        "name": "next"
      }
    ],
    
    // Additional compiler options
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipDefaultLibCheck": true
  },
  
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "contentlayer.config.js",
    ".contentlayer/generated",
    ".env*.local",
    "middleware.ts",
    "netlify/edge-functions/**/*.ts",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx"
  ],
  
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build",
    "coverage",
    ".turbo",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__mocks__/**",
    "**/.cache/**",
    "**/.contentlayer/**",
    "**/temp/**",
    "**/tmp/**"
  ],
  
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "~/*": ["*"]
    },
    "skipLibCheck": true,
    "noErrorTruncation": true
  },
  "exclude": ["node_modules", ".next", "dist", "_tests_"]
}
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "noEmit": false,
    "outDir": "./dist-scripts",

    "moduleResolution": "node",
    "lib": ["ES2022"],

    "types": ["node"],
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "skipLibCheck": true
  },
  "include": [
    "scripts/**/*",
    "tools/**/*",
    "prisma/seed.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "coverage",
    ".turbo",
    ".cache",
    ".contentlayer",

    "public/**",

    "backup-*",
    "**/backup-*",
    "**/*.bak",
    "**/*.old",

    "**/*.spec.*",
    "**/*.test.*",
    "__tests__/**",
    "__mocks__/**"
  ]
}